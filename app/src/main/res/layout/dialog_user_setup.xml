<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/request_subscription_number"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_13sdp" />
    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Urakaza neza muri aya mahugurwa ahoraho mu rukundo no mu ibanire yâ€™abashakanye. Shyiramo nimero ya telefone yawe, bizagufasha kubika amakuru yose ari kuri iyi app, no kubona amashyashya."/>
    <EditText
        android:id="@+id/txt_user_phone_in_dialog_user_setup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/txt_back"
        android:inputType="phone"
        android:hint="Enter your phone number"
        android:paddingLeft="@dimen/_5sdp" />


    <View
        android:id="@+id/lyt_divider"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/colorSeparator"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/lyt_divider"
        android:layout_marginTop="@dimen/_10sdp">


        <Button
            android:id="@+id/btn_user_setup"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back"
            android:text="Emeza numero"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>
