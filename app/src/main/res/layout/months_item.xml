<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:padding="@dimen/_5sdp"
    >

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardElevation="@dimen/_2sdp"
    card_view:cardCornerRadius="@dimen/_3sdp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <RelativeLayout

          android:id="@+id/lyt_month_number_in_item"
          android:background="@drawable/lyt_back"
          android:layout_centerHorizontal="true"
          android:layout_width="@dimen/_70sdp"
          android:layout_height="@dimen/_70sdp">
         <TextView
            android:layout_centerInParent="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="12"
             android:id="@+id/txt_month_number_in_item"
             android:textSize="@dimen/_20sdp"
             android:textColor="#fff"
             />
      </RelativeLayout>
      <TextView
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_below="@+id/lyt_month_number_in_item"
          android:layout_centerHorizontal="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Mothn name"
          android:textSize="@dimen/_15sdp"
          android:id="@+id/txt_month__name_in_item"

          />
   </RelativeLayout>
</androidx.cardview.widget.CardView>


</LinearLayout>