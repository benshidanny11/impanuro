<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@drawable/back_with_image">

    <TextView
        android:id="@+id/txt_welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="casual"
        android:padding="@dimen/_5sdp"
        android:text="Impanuro app"
        android:textColor="@color/white"
        android:textSize="@dimen/_28sdp"
        android:textStyle="bold|italic" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Komeza"
        android:background="@drawable/btn_back_2"
        android:textColor="#fff"
        android:width="@dimen/_150sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/btn_continue_in_welcome"/>
</RelativeLayout>