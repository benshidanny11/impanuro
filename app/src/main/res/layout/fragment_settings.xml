<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title_in_fragment_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Impanuro app"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/colorSeparator" />

    <RelativeLayout
        android:id="@+id/app_description_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">
        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />
     <LinearLayout
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

         <ImageView
             android:layout_marginLeft="@dimen/_10sdp"
             android:layout_width="@dimen/_25sdp"
             android:layout_height="@dimen/_25sdp"
             android:src="@drawable/ic_baseline_info_24"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/_20sdp"
             android:text="Uko application ikora"
             android:textAppearance="@style/TextAppearance.AppCompat.Headline"
             android:textColor="#4e4e4e"
             android:textSize="@dimen/_13sdp" />
     </LinearLayout>
    </RelativeLayout>
    <include
        layout="@layout/horizontal_devider"/>
    <RelativeLayout
        android:id="@+id/subscription_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_payment_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="Saba ifatabuguzi"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#4e4e4e"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

    </RelativeLayout>
    <include
        layout="@layout/horizontal_devider"/>

    <RelativeLayout
        android:id="@+id/policy_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true">
           <ImageView
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_width="@dimen/_25sdp"
               android:layout_height="@dimen/_25sdp"
               android:src="@drawable/ic_baseline_policy_24"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="@dimen/_20sdp"
               android:text="Amategeko n'amabwiriza"
               android:textAppearance="@style/TextAppearance.AppCompat.Headline"
               android:textColor="#4e4e4e"
               android:textSize="@dimen/_13sdp" />
       </LinearLayout>

    </RelativeLayout>
    <include
        layout="@layout/horizontal_devider"/>

    <RelativeLayout
        android:id="@+id/contact_us_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_contact_mail_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="Contact us"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#4e4e4e"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

    </RelativeLayout>
    <include
        layout="@layout/horizontal_devider"/>

</LinearLayout>
